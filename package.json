{
  "name": "ngnode-fullstack",
  "version": "0.0.1",
  "license": "MIT",
  "author": "Asad Sahi",
  "homepage": "http://ngnode-fullstack.herokuapp.com",
  "description": "Node and Angular fullstack SPA",
  "engines": {
    "node": ">=8.0",
    "npm": ">=5.0"
  },
  "angular-cli": {},
  "scripts": {
    "predev": "npm run clean",
    "dev": "npm run build:serve:client",
    "build:serve:client": "concurrently \"ng serve --proxy-config proxy.conf.js --open\" nodemon",
    "build:ssr": "npm run clean && concurrently \"ng build --watch --project=client\" \"ng build --project=ssr --watch\"",
    "serve:ssr": "nodemon -- --enable-ssr",
    "build:prod": "npm run clean && ng build --project=client --prod",
    "serve:prod": "cross-env NODE_ENV=production node server.js",
    "serve:prod:ssr": "cross-env NODE_ENV=production node server.js --enable-ssr",
    "install:global": "npm i -g rimraf sequelize-cli sqlite3 cross-env",
    "compodoc": "./node_modules/.bin/compodoc -p tsconfig.json",
    "analyze": "ng build --prod --stats-json && webpack-bundle-analyzer dist/client/stats.json",
    "deploy:heroku": "heroku config:set NPM_CONFIG_PRODUCTION=false && git push heroku master && heroku open",
    "heroku-postbuild": "npm run build:prod",
    "clean": "rimraf dist dist-server",
    "db": "sequelize db:migrate && sequelize db:seed:all",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --runInBand",
    "test:coverage": "jest --coverage",
    "lint": "ng lint",
    "deve2e": "concurrently \"ng serve --proxy-config proxy.conf.js --open\" \"cross-env NODE_ENV=development node ./server.js\"",
    "e2e": "testcafe-live chrome e2e/**/*.e2e-spec.ts",
    "e2e:ci": "testcafe all e2e/**/*.e2e-spec.ts --project=client \"yarn dev\" --app-init-delay 4000"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "6.1.2",
    "@angular/common": "6.1.2",
    "@angular/compiler": "6.1.2",
    "@angular/core": "6.1.2",
    "@angular/forms": "6.1.2",
    "@angular/http": "6.1.2",
    "@angular/platform-browser": "6.1.2",
    "@angular/platform-browser-dynamic": "6.1.2",
    "@angular/platform-server": "6.1.2",
    "@angular/router": "6.1.2",
    "@angular/service-worker": "6.1.2",
    "@nguniversal/express-engine": "6.0.0",
    "@nguniversal/module-map-ngfactory-loader": "6.0.0",
    "acl": "0.4.11",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "1.18.3",
    "compression": "1.7.3",
    "cookie-parser": "1.4.3",
    "core-js": "2.5.7",
    "express": "4.16.3",
    "express-session": "1.15.6",
    "globby": "8.0.1",
    "hbs": "4.0.1",
    "helmet": "3.13.0",
    "jsonwebtoken": "8.3.0",
    "lodash": "4.17.10",
    "morgan": "1.9.0",
    "multer": "1.3.1",
    "nodemailer": "4.6.7",
    "passport": "0.4.0",
    "passport-facebook": "2.1.1",
    "passport-google-oauth": "1.0.0",
    "passport-jwt": "4.0.0",
    "passport-local": "1.0.0",
    "preboot": "6.0.0-beta.4",
    "rxjs": "6.2.2",
    "sanitize.css": "6.0.0",
    "sequelize": "4.38.0",
    "sqlite3": "4.0.2",
    "zone.js": "0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "0.7.2",
    "@angular/cli": "6.1.2",
    "@angular/compiler-cli": "6.1.2",
    "@angular/language-service": "6.1.2",
    "@compodoc/compodoc": "1.1.3",
    "@types/express": "4.16.0",
    "@types/lodash": "4.14.116",
    "@types/node": "10.5.7",
    "codelyzer": "4.4.3",
    "concurrently": "3.6.1",
    "cross-env": "5.2.0",
    "jest": "23.4.2",
    "jest-preset-angular": "6.0.0",
    "nodemon": "1.18.3",
    "rimraf": "2.6.2",
    "sequelize-cli": "4.0.0",
    "testcafe": "0.21.1",
    "testcafe-angular-selectors": "0.3.0",
    "testcafe-live": "0.1.3",
    "ts-loader": "4.4.2",
    "ts-node": "7.0.0",
    "tslint": "5.11.0",
    "typescript": "2.9.1",
    "webpack-bundle-analyzer": "2.13.1"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupTestFrameworkScriptFile": "<rootDir>/src/setupJest.ts",
    "globals": {
      "ts-jest": {
        "tsConfigFile": "src/tsconfig.spec.json"
      },
      "__TRANSFORM_HTML__": true
    },
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png)$": "<rootDir>/__mocks__/image.js",
      "@app/(.*)": "<rootDir>/src/app/$1",
      "assets/(.*)": "<rootDir>/src/assets/$1",
      "environments/(.*)": "<rootDir>/src/environments/$1"
    }
  }
}
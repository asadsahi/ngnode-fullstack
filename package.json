{
  "name": "ngnode-fullstack",
  "version": "0.0.1",
  "license": "MIT",
  "author": "Asad Sahi",
  "homepage": "http://ngnode-fullstack.herokuapp.com",
  "description": "Node and Angular fullstack SPA",
  "engines": {
    "node": ">=8.0",
    "npm": ">=5.0"
  },
  "angular-cli": {},
  "scripts": {
    "predev": "npm run clean",
    "dev": "npm run build:serve:client",
    "build:serve:client": "concurrently \"ng serve --extract-css --proxy-config proxy.conf.js --open\" nodemon",
    "build:ssr": "npm run clean && concurrently \"ng build --dev --aot --extract-css --named-chunks=false --w\" \"ng build --dev --aot --named-chunks=false --app 1 --w\"",
    "serve:ssr": "nodemon -- --enable-ssr",
    "build:prod": "npm run clean && ng build --prod && ng build --prod --output-hashing=media --app 1",
    "serve:prod": "cross-env NODE_ENV=production node server.js",
    "serve:prod:ssr": "cross-env NODE_ENV=production node server.js --enable-ssr",
    "install:global": "npm i -g rimraf sequelize-cli sqlite3 cross-env",
    "compodoc": "./node_modules/.bin/compodoc -p tsconfig.json",
    "analyze": "ng build --extract-css --prod --stats-json && webpack-bundle-analyzer dist/stats.json",
    "deploy:heroku": "heroku config:set NPM_CONFIG_PRODUCTION=false && git push heroku master && heroku open",
    "heroku-postbuild": "npm run build:prod",
    "clean": "rimraf dist dist-server",
    "db": "sequelize db:migrate && sequelize db:seed:all",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --runInBand",
    "test:coverage": "jest --coverage",
    "lint": "ng lint",
    "deve2e": "concurrently \"ng serve --extract-css --proxy-config proxy.conf.js --open\" \"cross-env NODE_ENV=development node ./server.js\"",
    "e2e": "testcafe-live chrome e2e/**/*.e2e-spec.ts",
    "e2e:ci": "testcafe all e2e/**/*.e2e-spec.ts --app \"yarn dev\" --app-init-delay 4000"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "5.2.9",
    "@angular/common": "5.2.9",
    "@angular/compiler": "5.2.9",
    "@angular/core": "5.2.9",
    "@angular/forms": "5.2.9",
    "@angular/http": "5.2.9",
    "@angular/platform-browser": "5.2.9",
    "@angular/platform-browser-dynamic": "5.2.9",
    "@angular/platform-server": "5.2.9",
    "@angular/router": "5.2.9",
    "@angular/service-worker": "5.2.9",
    "@nguniversal/express-engine": "5.0.0-beta.6",
    "@nguniversal/module-map-ngfactory-loader": "5.0.0-beta.6",
    "acl": "0.4.11",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "1.18.2",
    "compression": "1.7.2",
    "cookie-parser": "1.4.3",
    "core-js": "2.5.3",
    "express": "4.16.3",
    "express-session": "1.15.6",
    "globby": "8.0.1",
    "hbs": "4.0.1",
    "helmet": "3.12.0",
    "jsonwebtoken": "8.2.0",
    "lodash": "4.17.5",
    "morgan": "1.9.0",
    "multer": "1.3.0",
    "nodemailer": "4.6.3",
    "passport": "0.4.0",
    "passport-facebook": "2.1.1",
    "passport-google-oauth": "1.0.0",
    "passport-jwt": "4.0.0",
    "passport-local": "1.0.0",
    "preboot": "6.0.0-beta.3",
    "rxjs": "5.5.7",
    "sanitize.css": "5.0.0",
    "sequelize": "4.37.2",
    "sqlite3": "3.1.13",
    "zone.js": "0.8.20"
  },
  "devDependencies": {
    "@angular/cli": "1.7.3",
    "@angular/compiler-cli": "5.2.9",
    "@angular/language-service": "5.2.9",
    "@compodoc/compodoc": "1.0.9",
    "@types/express": "4.11.1",
    "@types/lodash": "4.14.105",
    "@types/node": "9.4.7",
    "codelyzer": "4.2.1",
    "concurrently": "3.5.1",
    "cross-env": "5.1.4",
    "jest": "22.4.2",
    "jest-preset-angular": "5.2.1",
    "nodemon": "1.17.2",
    "rimraf": "2.6.2",
    "sequelize-cli": "4.0.0",
    "testcafe": "0.19.1",
    "testcafe-angular-selectors": "0.3.0",
    "testcafe-live": "0.1.3",
    "ts-loader": "4.1.0",
    "ts-node": "5.0.1",
    "tslint": "5.9.1",
    "typescript": "2.7.2",
    "webpack-bundle-analyzer": "2.11.1"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupTestFrameworkScriptFile": "<rootDir>/src/setupJest.ts",
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png)$": "<rootDir>/__mocks__/image.js",
      "@app/(.*)": "<rootDir>/src/app/$1",
      "assets/(.*)": "<rootDir>/src/assets/$1",
      "environments/(.*)": "<rootDir>/src/environments/$1"
    }
  }
}

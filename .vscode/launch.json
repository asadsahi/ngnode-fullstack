  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceRoot}\\server.js"
    },
    {
      "type": "node",
      "request": "attach",
      "protocol": "inspector",
      "name": "Attach to Process",
      "address": "localhost",
      "port": 9229
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Docker: Attach to Node",
      "port": 9229,
      "address": "localhost",
      "localRoot": "${workspaceFolder}/server.js",
      "remoteRoot": "/usr/src/app",
      "protocol": "inspector"
    }
  ]
}
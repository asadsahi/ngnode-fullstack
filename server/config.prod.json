{
    "appTitle": "NgNode fullstack",
    "Host": "http://ngnode-fullstack.herokuapp.com",
    "database": {
        "dialect": "sqlite",
        "storage": "./ngnode-fullstack.sqlite"
    },
    "Security": {
        "JWT_SECRET": "SECRET",
        "SESSION_SECRET": "SECRET"
    },
    "profile": {
        "fileSizeLimit": "1048576"
    },
    "whitelistedUserFields": [
        "firstName",
        "lastName",
        "email",
        "username",
        "displayName",
        "isAdmin",
        "roles",
        "profileImage"
    ],
    "illegalUsernames": [
        "meanjs",
        "administrator",
        "password",
        "admin",
        "user",
        "unknown",
        "anonymous",
        "null",
        "undefined",
        "api"
    ],
    "facebook": {
        "clientID": "",
        "clientSecret": "",
        "callbackURL": "/api/auth/facebook/callback"
    },
    "twitter": {
        "username": "",
        "clientID": "",
        "clientSecret": "",
        "callbackURL": "/api/auth/twitter/callback"
    },
    "google": {
        "clientID": "",
        "clientSecret": "",
        "callbackURL": "/api/auth/google/callback"
    },
    "mailOptions": {
        "from": "'NgNode Fullstack' <admin@ngnodefullstack.com>",
        "service": "gmail",
        "auth": {
            "user": "email",
            "pass": "password"
        }
    }
}